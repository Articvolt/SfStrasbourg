{% extends 'base.html.twig' %}

{% block title %}Hello EmployeController!{% endblock %}

{% block body %}

    <h1>{{ entreprise }}</h1>
 
    

    <p>
        SIRET:  {{ entreprise.siret }}<br>
        Date de création: {{ entreprise.dateCreation | date('d-m-Y') }} <br>
        Adresse: {{ entreprise.fullAdresse }}
    </p>

    <h2>Liste des employés</h2>

        {% if entreprise.employes | length == 0 %}
        
        <p>pas d'employé dans l'entreprise</p>

        {% else %}
        
            {% for employe in entreprise.employes %}
                {{employe}} <br>
            {% endfor %}

        {% endif %}

{% endblock %}
